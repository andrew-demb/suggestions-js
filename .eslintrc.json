{
  "overrides": [
    // typescript
    {
      "files": [
        "./**/*.ts"
      ],
      "env": {
        "browser": true
      },
      "extends": [
        "eslint:recommended",
        "plugin:@typescript-eslint/recommended"
      ],
      "parser": "@typescript-eslint/parser",
      "parserOptions": {
        "ecmaVersion": 11,
        "sourceType": "module"
      },
      "plugins": [
        "@typescript-eslint"
      ],
      "rules": {
        "no-empty": "off"
      }
    },
    // config files
    {
      "files": [
        "./*.js"
      ],
      "extends": [
        "eslint:recommended"
      ],
      "env": {
        "node": true,
        "es6": true
      }
    }
  ]
}
